<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    <%= title%>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Topic</a></li>
                    <li class="breadcrumb-item active">Danh sách</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <%- include("../../Partials/Flash") %>
                    </div>
                    <div class="col-6">
                        <div class="float-right">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="admin/topic/add" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp; Thêm mới</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="admin/topic/trash" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thùng rác</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="cate1" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center no-sort" style="width:3rem;">ID</th>
                            <th class=""> Tên chủ đề </th>
                            <th class="no-sort">Liên kết</th>
                            <th>Cấp cha</th>
                            <th class="no-sort">Ngày tạo</th>
                            <th class="no-sort text-center" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(function(cat){%>
                            <tr>
                                <td class="text-center">
                                    <%= cat.ID%>
                                </td>
                                <td>
                                    <a href="admin/topic/detail?id=<%= cat.ID%>">
                                        <%= cat.Name%>
                                    </a>
                                </td>
                                <td>
                                    <a href="">
                                        <%= cat.Slug%>
                                    </a>
                                </td>
                                <td>
                                    <%= cat.ParentID %>
                                </td>
                                <td>
                                    <%= format_datetime(cat.Created_at) %>
                                </td>
                                <td class="text-center">
                                    <%if(cat.Status == 1 ){%>
                                        <button type="button" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Trạng thái: Đang hiển thị">
                                        <a href="admin/topic/status?id=<%= cat.ID%>" class="text-white"><i class="fas fa-toggle-on"></i></a>
                                    </button>
                                        <% }else{%>
                                            <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Trạng thái: Không hiển thị">
                                        <a href="admin/topic/status?id=<%= cat.ID%>" class="text-white"><i class="fas fa-toggle-off"></i></a>
                                    </button>
                                            <%}%>

                                                <button type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                    <a href="admin/topic/edit?id=<%= cat.ID%>" class="text-white"><i class="fas fa-pen"></i></a>
                                </button>
                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                    <a href="admin/topic/deltrash?id=<%= cat.ID%>" class="text-white"><i class="far fa-trash-alt"></i></a>
                                </button>
                                </td>
                            </tr>
                            <%})%>
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>