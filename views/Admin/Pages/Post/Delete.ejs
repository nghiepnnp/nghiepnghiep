<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    <%= title %>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Categories</a></li>
                    <li class="breadcrumb-item active">Chi tiet</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <%- include("../../Partials/Flash") %>
                    </div>
                    <div class="col-6">
                        <div class="float-right">
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="Admin/post/delete?id=<%= result.ID%>" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Xóa hoàn toàn</a> 
                            </button>
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="Admin/post" class="text-white"><i class="fas fa-sign-out-alt fa-xs"></i>&nbsp; Thoát</a> 
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col">Tên
                        </th>
                        <td scope="col">
                            <%= result.Title %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Slug</th>
                        <td scope="col">
                            <a href="">
                                <%= result.Slug %>
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>