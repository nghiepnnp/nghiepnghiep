<form action="admin/contact/reply?id=<%= result.ID%>" method="POST">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 class="m-0 text-dark">
                        <%= title %>
                    </h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Liên hệ</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <!--Content-->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <%- include("../../Partials/Flash") %>
                        </div>
                        <div class="col-6">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary btn-sm" <%if(result.Status == 2){%>
                                    disabled
                                    <%}%>>
                                   <i class="fas fa-save fa-xs"></i>&nbsp; Trả lời
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <a href="admin/contact/" class="text-white"><i class="fas fa-sign-out-alt fa-xs"></i>&nbsp; Thoát</a>
                                </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="form-group">
                            <label for="">Nội dung câu hỏi</label>
                            <textarea class="form-control animated" name="Content" rows="5" readonly><%=result.Content %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="">Nội dung trả lời</label>
                                <textarea class="form-control animated" name="Reply" rows="7"
                                    <%if(result.Status == 2){%> readonly <%}%> > <%=result.Reply %></textarea>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <label for="">Họ Tên</label>
                            <input type="text" class="form-control" name="Fullname" readonly value="<%=result.Fullname %>">
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" class="form-control" name="Email" readonly value="<%=result.Email %>">
                        </div>
                        <div class="form-group">
                            <label for="">Điện thoại</label>
                            <input type="text" class="form-control" name="Phone" readonly value="<%=result.Phone %>">
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>
</form>
<style>
    .text-primama {
        color: #1e91cf;
    }
</style>
