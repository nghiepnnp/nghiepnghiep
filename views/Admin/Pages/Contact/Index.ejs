<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    <%= title %>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Liên hệ</a></li>
                    <li class="breadcrumb-item active">Danh sách</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <%- include("../../Partials/Flash") %>
                    </div>
                    <div class="col-6">
                        <div class="float-right">
                            <div class="float-right">
                                <button type="button" class="btn btn-info btn-sm">
                                    <a href="admin/contact/notansweredyet" class="text-white"></i>
                                        &nbsp; Liên hệ chưa trả lời <strong>(<%=count1%>)</strong> 
                                    </a>
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    <a href="admin/contact/answered" class="text-white"></i>
                                        &nbsp; Liên hệ đã trả lời <strong>(<%=count2%>)</strong>
                                    </a>
                                </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover" style="font-size:15px">
                    <thead>
                        <tr>
                            <th class="text-center no-sort text-dark" style="width:3rem;">#</th>
                            <th class="text-primama"> Họ Tên KH </th>
                            <th class="no-sort text-primama text-center">Phone</th>
                            <th class="no-sort text-primama text-right">Email</th>
                            <th class="no-sort text-primama text-center">Trạng thái</th>
                            <th class="no-sort text-center text-primama" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(function(cat){%>
                        <tr>
                            <td class="text-center">
                                <%= cat.ID%>
                            </td>
                            <td>
                                <%= cat.Fullname%>
                            </td>
                            <td class='text-center'>
                                <%= cat.Phone%>
                            </td>
                            <td class="text-right">
                                <%= cat.Email%>
                            </td>
                            <td class="text-center">
                                <%if(cat.Status == 1){%>
                                <span class='badge badge-success'>Chưa trả lời</span>
                                <%}else{%>
                                    <span class='badge badge-secondary'>Đã trả lời</span>
                                    <%}%>
                            </td>
                            <td class="text-center">
                            <%if(cat.Status == 1){%>
                                <button type="button" class="btn btn-sm px-3 btn-info"
                                    data-toggle="tooltip" data-placement="top" title="Trả lời">
                                    <a href="admin/contact/reply?id=<%= cat.ID%>" class="text-white">
                                        <i class="fas fa-reply"></i> Trả lời</a>
                                </button>
                            <%}else{%>
                                <button type="button" class="btn btn-sm px-3 btn-secondary"
                                    data-toggle="tooltip" data-placement="top" title="Đã trả lời">
                                    <a href="admin/contact/reply?id=<%= cat.ID%>" class="text-white">
                                      Đã trả lời</a>
                                </button>
                                <%}%>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>
<style>
    .text-primama {
        color: #1e91cf;
    }
</style>