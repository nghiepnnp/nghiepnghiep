<form method="POST" action="admin/product/edit?id=<%= result.ID%>" enctype="multipart/form-data">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><%- title %></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Product</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <!--Content-->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <h3 class="col-6">
                            <%- include("../../Partials/Flash") %>
                        </h3>
                        <div class="col-6">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-save fa-xs"></i>&nbsp; Save
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <a href="admin/product/" class="text-white"><i
                                            class="fas fa-sign-out-alt fa-xs"></i>&nbsp; Exit</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <label for="">Tên sản phẩm</label>
                                <input type="text" class="form-control" placeholder="" name="Name" required value="<%= result.Name%>">
                            </div>
                            <div class="form-group">
                                <label>Chi tiết</label>
                                <textarea class="textarea" name="Detail"><%- result.Content%></textarea>
                            </div>
                            <div class="form-group">
                                <label>MetaKey</label>
                                <textarea class="form-control" name="MetaKey" rows="2"><%= result.MetaKey%></textarea>
                            </div>
                            <div class="form-group">
                                <label>MetaDesc</label>
                                <textarea class="form-control" name="MetaDesc" rows="2"><%= result.MetaDesc%></textarea>
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label>Chọn hình ảnh</label>
                                <input type="file" class="form-control-file" name="Image">
                            </div>
                            <div class="form-group">
                                <label for="inputState">Loại sản phẩm</label>
                                <select class="form-control" name="Cate_ID">
                                    <% parentID.forEach(function(p){%>
                                        <%if(result.Cate_ID == p.ID){%>
                                    <option value="<%=p.ID%>" selected><%= p.Name%></option>
                                    <%}else{%>
                                        <option value="<%=p.ID%>"><%= p.Name%></option>
                                        <%}%>
                                    <%})%>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Giá sản phẩm</label>
                                <input class="form-control" name="Price" type="number"  min='1000'  value="<%= result.Price%>"/>
                            </div>
                            <div class="form-group">
                                <label>Giá khuyến mãi</label>
                                <input class="form-control" name="PPrice" type="number"  min='1000'  value="<%= result.PromotionPrice%>"/>
                            </div>
                            <div class="form-group">
                                <label for="inputState">Giảm giá khi mua online</label>
                                <select class="form-control" name="BuyOS">
                                    <option selected value="1">Có </option>
                                    <option value="2">Không </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputState">Trả góp 0%</label>
                                <select class="form-control" name="Gop0">
                                    <option value="1">Có </option>
                                    <option selected value="2">Không</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputState">Trạng thái</label>
                                <select class="form-control" name="Status">
                                    <option selected value="1">Hiển thị </option>
                                    <option value="2">Không hiển thị </option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</form>