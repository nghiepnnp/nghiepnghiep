<form method="POST" action="admin/page/edit?id=<%= result.ID %>">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><%- title%></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="admin/page">Trang đơn</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <!--Content-->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <%- include("../../Partials/Flash") %>
                        </div>
                        <div class="col-6">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-save fa-xs"></i>&nbsp; Save
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <a href="admin/page/" class="text-white"><i
                                            class="fas fa-sign-out-alt fa-xs"></i>&nbsp; Exit</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <label for="">Tên trang đơn</label>
                                <input type="text" class="form-control" placeholder="" name="Title" required
                                    value="<%= result.Title%>">
                            </div>
                            <div class="form-group">
                                <label>Chi tiết</label>
                                <textarea class="textarea" name="Detail"><%= result.Detail%></textarea>
                            </div>
                            <div class="form-group">
                                <label>MetaKey</label>
                                <textarea class="form-control" name="MetaKey" rows="2"> <%= result.MetaKey%></textarea>
                            </div>
                            <div class="form-group">
                                <label>MetaDesc</label>
                                <textarea class="form-control" name="MetaDesc" rows="2"><%= result.MetaDesc%></textarea>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="inputState">Trạng thái</label>
                                <select class="form-control" name="Status">
                                    <%if(result.Status == 1){%>
                                    <option selected value="1">Hiển thị </option>
                                    <option value="2">Không hiển thị </option>
                                    <%}else{%>
                                    <option value="1">Hiển thị </option>
                                    <option selected value="2">Không hiển thị </option>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>