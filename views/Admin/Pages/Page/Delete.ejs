<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    <%= title %>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang đơn</a></li>
                    <li class="breadcrumb-item active"></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <%- include("../../Partials/Flash") %>
                    </div>
                    <div class="col-6">
                        <div class="float-right">
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="Admin/page/delete?id=<%= result.ID%>" class="text-white"><i
                                        class="fas fa-pen fa-xs"></i>&nbsp; Xóa hoàn toàn</a>
                            </button>
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="Admin/page" class="text-white"><i class="fas fa-sign-out-alt fa-xs"></i>&nbsp;
                                    Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col">Tên
                        </th>
                        <td scope="col">
                            <%= result.Title %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Slug</th>
                        <td scope="col">
                            <a href="">
                                <%= result.Slug %>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Chi tiết</th>
                        <td scope="col">
                            <%= result.Detail %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">MetaKey</th>
                        <td scope="col">
                            <%= result.MetaKey %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">MetaDesc</th>
                        <td scope="col">
                            <%= result.MetaDesc %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Ngày tạo</th>
                        <td scope="col">
                            <%= result.Created_at %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Người tạo</th>
                        <td scope="col">
                            <%= result.Created_by %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Ngày cập nhật</th>
                        <td scope="col">
                            <%= result.Updated_at %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col">Người cập nhật</th>
                        <td scope="col">
                            <%= result.Updated_by %>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>