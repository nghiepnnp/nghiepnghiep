                    Danh mục
                </a>
                <nav class="main-menu">
                    <ul>
                        <% var i = 1;categories.forEach(function(c){ %>
                        <% if(c.ParentID == 0){ %>
                        <li>
                            <a href="<%=c.Slug %>"> <i class="icon-<%= i++;%>"></i> &nbsp;
                                <%= c.Name %>
                            </a>
                            <ul>
                                <% categories.forEach(function(d){ %>
                                <% if(d.ParentID == c.ID){ %>
