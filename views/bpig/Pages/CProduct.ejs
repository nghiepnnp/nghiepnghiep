<%if(productsByCategory != 0){%>
<div class="breadcrumb-c clearfix" style="background:#f3f3f3;">
    <ul class="container-91" style="background:#eaeaea;">
        <li><a href="/">Trang chủ</a></li>
        <li><a href="/<%= result.Slug%>"><%= result.Name%></a></li>
        <li> Có <b class="d-inline"><%let i = 0;productsByCategory.forEach(function(){i++})%><%=i%></b> sản phẩm
            [<%= result.Name%>] </li>
    </ul>
</div>

<div style="clear:both"></div>
<div class="" style="background:#f3f3f3;">
    <div style="background:#f3f3f3;">
        <div class="container-91 clearfix">
            <div class="row">
                <div class="col-10">
                    <% productsByCategory.forEach(function(p){%>
                    <div class="t-item" style="width:25%">
                        <a href="<%=p.Slug%>">
                            <div class="t-img">
                                <img src="images/Uploads/<%= p.Image%>" alt="" class="beau">
                                <%if(p.Gop0 == 1){%>
                                <div class="anw mr-1">Trả góp <span class="font-weight-bold">0%</span></div>
                                <%}%>
                                    </div>
                                    <div class="couple">
                                        <%if(p.BuyOS == 1){%>
                                <img src="images/online-giảm-sốc-1x.png" alt="" class="h-100">
                                <%}%>
                                    </div>
                                    <div class="t-np">
                                        <%= p.Name%>
                            </div>
                            <div class="t-price clearfix">
                                <div class="price">
                                    <%= p.PromotionPrice.replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.") %>
                                </div>
                                <div class="old-price float-left">
                                    <%= p.Price.replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.") %>
                                </div>
                                <div class="khongbietdattenlagi float-left">(-
                                    <%= ((parseInt(p.Price)-parseInt(p.PromotionPrice))/parseInt(p.Price) * 100).toFixed(0) %>
                                    %)
                                </div>
                            </div>
                            <div class="container ml-1">
                                <small class="text-warning d-inline">4.9/5</small> <small
                                    class="fas fa-star text-warning"></small> <small class="text-secondary"> Đánh
                                    giá</small>
                            </div>
                        </a>
                    </div>
                    <%})%>
                </div>

                <div class="col-2 bg-light">
                    <h6 class="font-weight-bold">GIÁ BÁN</h6>
                    <div class="row">
                        <div class="col-6">
                            <a href="" class="text-decoration-none">
                                <small class="my-2"> Dưới 5 triệu </small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="" class="text-decoration-none">
                                <small class="my-2"> Dưới 5 triệu </small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="" class="text-decoration-none">
                                <small class="my-2"> Dưới 5 triệu </small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%}else{%>
    <div class="breadcrumb-c clearfix" style="background:#f3f3f3;">
        <ul class="container-91" style="background:#eaeaea;">
            <li><a href="/">Trang chủ</a></li>
            <li><a href="/<%= result.Slug%>"><%= result.Name%></a></li>
            <li> Có <b class="d-inline"><%let i = 0;productsByCategory.forEach(function(){i++})%><%=i%></b> sản phẩm
                [<%= result.Name%>] </li>
        </ul>
    </div>
    <div style="clear:both"></div>
    <div class="pb-2" style="background:#f3f3f3;">
        <div class="container-91 clearfix mb-3" style="min-height:200px; background: #fff;">
            Chưa có dữ liệu hiển thị
        </div>
    </div>
    <%- include('../Partials/Popu.ejs') %>
    <%}%>
    